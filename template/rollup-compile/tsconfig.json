{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "lib": ["ES2015", "DOM"],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "skipLibCheck": true
  },
  "include": ["packages/**/*.ts", "packages/**/*.js"],
  "references": []
}
